<div class="container">
  <div class="row">
    <% @tasks.each_slice(3) do |row| %>
      <% row.each do |task| %>
        <div class="col">
          <div class="card">
            <%= image_tag task.photo, size:'200x200', class: 'card-img-top' %>
            <div class="body">
              <h5> <%= task.name %> </h5>
              <% if buscar(task).nil? || buscar(task).completed == false %>
                <%= link_to "Hacer Tarea", cambios_task_path(task), class: 'btn btn-success', method: :post %>
              <%else %>
                <%= link_to "Cancelar Tarea", cambios_task_path(task), class: 'btn btn-danger', method: :post %>
              <% end %>
              <%= link_to "show", tasks_show_path, class: 'btn btn-success',  method: :get%>
            </div>
          </div>
        </div>
      <% end %>
      <div class="w-100" style="margin-top: 20px"> </div>
    <% end %>
  </div>
</div>
